                    <div class="card col-lg-4 mx-auto">
                        <div class="card-body px-5 py-5">
                            <h3 class="card-title text-left mb-3">Login</h3>
                            <form id="loginPage" action="login" method="post" onsubmit="return validateForm()">
                                <h6 id="msg" class="text-center text-danger">&nbsp;<%= message %></h6>
                                
                              
                                <div class="form-group">
                                  <label for="email">Email *</label>
                                  <input type="email" class="form-control p_input" id="email" name="email"  pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" title="Please enter a valid email address."
                                  >
                                </div>
                              
                                <div class="form-group">
                                  <label for="password">Password *</label>
                                <input type="password" class="form-control p_input" id="password" name="password" required minlength="8" maxlength="20"
                                    title="Password must be 8-20 characters long.">
                                </div>
                              
                                <div class="form-group d-flex align-items-center justify-content-between">
                                  <div class="form-check">
