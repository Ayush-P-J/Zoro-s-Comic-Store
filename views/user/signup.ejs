<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup Page</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #6e6e6e 0%, #353535 100%);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .signup-container {
            background: white;
            border-radius: 16px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 750px;
            padding: 40px;
            transition: all 0.3s ease;
        }

        .signup-container:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        }

        .signup-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .signup-header h2 {
            color: #4a4a4a;
            font-weight: 600;
        }

        .form-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            width: 100%;
            padding: 12px 15px;
            border: 1.5px solid #e0e0e0;
            border-radius: 8px;
            font-size: 16px;
            transition: border-color 0.3s ease;
        }

        .form-control:focus {
            outline: none;
            border-color: #75ea66;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        .signup-btn {
            width: 50%;
            padding: 14px;
            background: linear-gradient(135deg, #dbdbdb 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.2s ease;
        }

        .signup-btn:hover {
            transform: scale(1.02);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
        }

        .google-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 12px;
            background-color: #fff;
            border: 1.5px solid #e0e0e0;
            border-radius: 8px;
            color: #757575;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 15px;
        }

        .google-btn img {
            margin-right: 10px;
            width: 24px;
            height: 24px;
        }

        .google-btn:hover {
            background-color: #f5f5f5;
            border-color: #d0d0d0;
        }

        .extra-links {
            text-align: center;
            margin-top: 20px;
        }

        .extra-links a {
            color: #667eea;
            text-decoration: none;
            font-weight: 600;
        }

        @media (max-width: 768px) {
            .form-grid {
                grid-template-columns: 1fr;
            }
        }
        #bttn {
            position: absolute;
            top: 20px;
            left: 20px;
            padding: 10px 20px;
            background-color: #000000;
            border: none;
            border-radius: 5px;
            color: white;
            font-weight: 600;
            cursor: pointer;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            transition: background-color 0.3s ease, transform 0.2s ease;
        }
    
        #bttn:hover {
            background-color: #c2c2c2;
            transform: scale(1.05);
        }
    </style>
</head>

<body>
  <button id="bttn" style="margin-left:20px ;" class="ml-5">back</button>

    <div class="signup-container">
        <div class="signup-header">
            <h2>Create an Account</h2>
        </div>
        <form id="signupForm" action="signup" method="post">
            <div class="form-grid">
                <div class="form-group">
                    <input type="text" class="form-control" id="fullName" name="fullName" placeholder="Full Name" required>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" id="userName" name="userName" placeholder="Username" required>
                </div>
                <div class="form-group">
                    <input type="tel" class="form-control" id="phone" name="phone" placeholder="Phone Number"
                        pattern="[0-9]{10}" required>
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" id="email" name="email" placeholder="Email Address" required>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password"
                        required>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="confirmPass" name="confirmPass"
                        placeholder="Confirm Password" required>
                </div>
            </div>
            <div class="row justify-content-center">
              <button type="submit" class="signup-btn col-6 m-1">Sign Up</button>
            <a class="google-btn col-6" href="auth/google">
                <img src="data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTgiIGhlaWdodD0iMTgiIHhtbG5zPSJodHRwOi8vd3d3LnczLm9yZy8yMDAwL3N2ZyI+PHBhdGggZD0iTTE3LjYgOS4ybC4xLTEuOEg5djMuNGg0LjhDMTMuNiAxMiAxMyAxMyAxMiAxMy42djIuMmgzYTguOCA4LjggMCAwIDAgMi42LTYuNnoiIGZpbGw9IiM0Mjg1RjQiLz48L3N2Zz4="
                    alt="Google Logo"> Sign in with Google
            </a>
            </div>
            <div class="extra-links">
                Already have an account? <a href="/login">Login</a>
            </div>
        </form>
    </div>
</body>
<script>
  const fullName = document.getElementById('fullName');
  const userName = document.getElementById('userName');
  const phone = document.getElementById('phone');
  const email = document.getElementById('email');
  const password = document.getElementById('password');
  const confirmPass = document.getElementById('confirmPass');
  const signupForm = document.getElementById('signupForm');

  // Error message elements
  const errorFullName = document.getElementById('error-fullName');
  const errorUserName = document.getElementById('error-userName');
  const errorPhone = document.getElementById('error-phone');
  const errorEmail = document.getElementById('error-email');
  const errorPassword = document.getElementById('error-password');
  const errorConfirmPass = document.getElementById('error-confirmPass');

  // Regular Expressions
  const passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$/;
  const phoneRegex = /^[0-9]{10}$/;

  signupForm.addEventListener('submit', (e) => {
    let valid = true;

    // Clear previous messages
    errorFullName.innerText = "";
    errorUserName.innerText = "";
    errorPhone.innerText = "";
    errorEmail.innerText = "";
    errorPassword.innerText = "";
    errorConfirmPass.innerText = "";

    // Full Name Validation
    if (fullName.value.trim() === '') {
      errorFullName.innerText = "Please enter your full name.";
      valid = false;
    } else if (!/^[a-zA-Z\s]+$/.test(fullName.value.trim())) {
      errorFullName.innerText = "Full name should not contain special characters.";
      valid = false;
    } else {
      errorFullName.innerText = "";
    }


    // Username Validation
    if (userName.value.trim() === '') {
      errorUserName.innerText = "Please enter a username.";
      valid = false;
    }

    // Phone Number Validation
    if (!phoneRegex.test(phone.value)) {
      errorPhone.innerText = "Please enter a valid 10-digit phone number.";
      valid = false;
    }

    // Email Validation
    if (email.value.trim() === '') {
      errorEmail.innerText = "Please enter your email address.";
      valid = false;
    }

    // Password Validation
    if (!passwordRegex.test(password.value)) {
      errorPassword.innerText = "Password must be at least 8 characters long, with an uppercase letter, lowercase letter, number, and special character.";
      valid = false;
    }

    // Confirm Password Validation
    if (password.value !== confirmPass.value) {
      errorConfirmPass.innerText = "Passwords do not match.";
      valid = false;
    }

    if (!valid) {
      e.preventDefault();
    }
  });
  document.getElementById('bttn').addEventListener('click',()=>{
            
            window.history.back()
        })
</script>


</html>
