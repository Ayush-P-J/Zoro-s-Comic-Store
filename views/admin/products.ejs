          </div>




          <div class="row ">
            <div class="col-12 grid-margin">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Products</h4>
                  <div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th>Sl no</th>
                          <th>Product Name</th>
                          <th>Stock</th>
                          <th>Category</th>
                          <th>Offer</th>
                          <th>Regular Price</th>
                          <th>Sale Price</th>
                          <th>Status</th>
                          <th>Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% let sl=limit * (currentPage - 1) %>
                          <% products.forEach((product)=> { %>


                            <tr>
                              <td>
                                <%= sl +=1 %>
                              </td>
                              <td class="product-name-cell">
                                <%= product.productName %>
                              </td>
                              <td>
                                <%= product.stock %>
                              </td>
                              <td>
                                <%= product.category.categoryName %>
                              </td> <!-- Assuming category has been populated -->
                              <td>
                                <%= product.offer ? product.offer : 'N/A' %>
                              </td>
                              <td>
                                <%= product.regularPrice %>
                              </td>
                              <td>
                                <%= product.salePrice ? product.salePrice : 'N/A' %>
                              </td>
                              <td>
                                <% if (product.status==="Available" ) { %>
                                  <span class="badge badge-success">Available</span>
                                  <% } else { %>
                                    <span class="badge badge-danger">Out of Stock</span>
                                    <% } %>
                              </td>
                              <td>
                                <a href="/admin/products/edit/<%= product._id %>" class="btn btn-warning btn-sm">
                                  <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <% if (product.isListed) { %>
                                  <a href="javascript:void(0);" class="btn btn-danger btn-sm"
                                    onclick="confirmDelete('/admin/products/delete/<%= product._id %>')">
                                    <i class="fa-solid fa-trash"></i>
                                  </a>

                                  <% } else{ %>
                                    <a href="javascript:void(0);" class="btn btn-success btn-sm"
                                      onclick="restoreDelete('/admin/products/delete/<%= product._id %>')">
                                      <i class="fa-solid fa-trash"></i>
                                    </a>

                                    <% } %>
                              </td>


                            </tr>
                            <% }); %>
                      </tbody>
                    </table>
                  </div>
                </div>
                <div class="d-flex justify-content-center mt-4">
                  <ul class="pagination">
                    <% for (let i=1; i <=totalPages; i++) { %>
                      <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
                        <a class="page-link" href="?page=<%= i %>">
                          <%= i %>
                        </a>
                      </li>
                      <% } %>
                  </ul>
                </div>
              </div>
            </div>
