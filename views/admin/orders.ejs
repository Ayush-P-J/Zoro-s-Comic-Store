    <style>
        .status-badge {
            padding: 8px 12px;
            border-radius: 8px;
            font-weight: 500;
            display: inline-block;
        }

        .status-order-placed {
            background-color: #e3f2fd;
            color: #1565c0;
        }

        .status-processing {
            background-color: #fff3e0;
            color: #e65100;
        }

        .status-shipped {
            background-color: #f3e5f5;
            color: #7b1fa2;
        }

        .status-out-for-delivery {
            background-color: #e8eaf6;
            color: #303f9f;
        }

        .status-delivered {
            background-color: #e8f5e9;
            color: #2e7d32;
        }

        .status-cancelled {
            background-color: #ffebee;
            color: #c62828;
        }

        .status-returned {
            background-color: #fbe9e7;
            color: #d84315;
        }

        .status-select {
            padding: 4px 8px;
            border-radius: 4px;
            background-color: #1e2024;
            color: #fff;
            border: 1px solid #3a3f48;
            width: 150px;
            appearance: none;
            /* Removes default arrow */
            cursor: pointer;
            font-size: 14px;
        }

        /* Custom styling for different statuses */
        .status-select[value="Cancelled"] {
            background-color: #ff4d4d;
            color: white;
        }

        .status-select[value="Order Placed"] {
            background-color: #007bff;
            color: white;
        }

        .status-select:focus {
            outline: none;
            border-color: #007bff;
            box-shadow: 0 0 0 2px rgba(0, 123, 255, 0.25);
        }

        /* Style for the dropdown arrow */
        .status-cell {
            position: relative;
        }

        .status-cell::after {
            content: 'â–¼';
            font-size: 12px;
            color: #6c757d;
            position: absolute;
            right: 25px;
            top: 50%;
            transform: translateY(-50%);
            pointer-events: none;
        }

        /* Style for dropdown options */
        .status-select option {
            background-color: #1e2024;
            color: #fff;
            padding: 8px;
        }
    </style>

    <style>
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
